<div class="container">
<div class="search-form-control form-group">
  <%= simple_form_for :search, url: events_path, method: "get" do |f| %>
    <div class="row" style="margin: 0">
      <%= f.input :query, as: :string, input_html: { id: "flat_address", :style=> 'width: 386px'}, placeholder: "e.g. London", label: "Where" %>
      <%= f.input :from, as: :string, placeholder: "yyyy-mm-dd", required: false, input_html: {class: "datepicker search-box"} %>
      <%= f.input :to, as: :string, placeholder: "yyyy-mm-dd", required: false, input_html: {class: "datepicker search-box"} %>
    </div>
    <div class="search-button">
      <%= submit_tag "Search", class: "btn btn-danger btn-block" %>
    </div>
  <% end %>
</div>

