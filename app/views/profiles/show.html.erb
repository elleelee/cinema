<div class="cards-container">
  <div class="profilecards col-md-7">
    <div class="mybookings">
      <h4 class="profile-title">Events you're going to:</h4>
        <% if current_user.bookings %>
          <%= render '/shared/bookingeventcards' %>
        <% else %>
          <div class="eventcard">
            <div class="eventposter">
              <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/42/Shrug.jpg/220px-Shrug.jpg" height="200" width="140" alt="shrugging-old-man" class="event__thumbnail">
            </div>
            <div class="event_info">
              <h4 class="event__title">No events!</h4>
              <li class="event__details">Check out events near by!</li>
              <br>
              <button type="button" class="btn btn-primary" href="/events/new">Check out events to attend!</button>
            </div>
          </div>
        <% end %>
    </div>


    <div class="myevents">
      <h4 class="profile-title">Events you're hosting:</h4>
      <% @events = current_user.events %>
      <% if current_user.events %>
        <%= render '/shared/eventscards' %>
      <% else %>
        <div class="eventcard">
        <div class="eventposter">
          <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/42/Shrug.jpg/220px-Shrug.jpg" height="200" width="140" alt="shrugging-old-man" class="event__thumbnail">
        </div>
        <div class="event_info">
          <h4 class="event__title">No events!</h4>
          <li class="event__details">You could earn ğŸ’°ğŸ’°ğŸ’° by hosting an event!</li>
          <br>
          <button type="button" class="btn btn-primary" href="/events/new">Host an event!</button>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

