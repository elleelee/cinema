<div class="cards-container">
  <div class="profilecards col-md-7">

    <!-- MY BOOKINGS -->
    <div class="mybookings">
      <h4 class="profile-title">Events you're going to:</h4>
        <% if current_user.bookings.any? %>
          <%= render '/shared/bookingeventcards' %>
        <% else %>
          <div class="eventcard">
            <div class="eventposter">
              <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/42/Shrug.jpg/220px-Shrug.jpg" height="200" width="140" alt="shrugging-old-man">
            </div>
            <div class="event_info">
              <h4 class="event__title">No events!</h4>
              <br>
              <a class="btn btn-primary" href="/">Check out events near by!</a>
            </div>
          </div>
        <% end %>
    </div>

    <!-- MY EVENTS -->
    <div class="myevents">
      <h4 class="profile-title">Events you're hosting:</h4>
      <% if current_user.events.any? %>
        <% @events = current_user.events %>
        <%= render '/shared/hosteventcards' %>
      <% else %>
        <div class="eventcard">
          <div class="eventposter">
            <img src="https://i1.wp.com/mattersofinterest.info/wp-content/uploads/2014/11/rich-monopoly-man.jpg" height="200" width="140"  alt="shrugging-old-man">
          </div>
          <div class="event_info">
            <h4 class="event__title">No events!</h4>
            <p class="event__details">You could earn ğŸ’°ğŸ’°ğŸ’° by hosting an event!</p>
            <a class="btn btn-primary" href="/events/new">Create your own event!</a>
          </div>
        </div>
      <% end %>
    </div>


  </div>
</div>


