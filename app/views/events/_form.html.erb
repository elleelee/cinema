<%= simple_form_for(@event) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :date, as: :date, html5: true %>
  <%= f.input :venue_type, collection: Event::VENUE_CATEGORIES %>
  <%= f.input :movie %>
  <%= f.input :ticket_price, input_html: { min: '1' } %>
  <%= f.input :capacity, input_html: { min: '0' } %>
  <%= f.input :photos, class: "button", input_html: { multiple: true } %>
  <%= f.input :photos_cache, as: :hidden, class: "button" %>
  <!-- need to be able to upload multiple photos -->
  <%= f.submit 'Edit', class: "button" %>
<% end %>

