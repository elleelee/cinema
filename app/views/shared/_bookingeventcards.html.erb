<ul class= "events_list">
  <% current_user.bookings.each do |booking| %>
     <%= link_to event_path(booking.event), class: 'text-decoration-none' do %>
      <div class="eventcard">
        <% if booking.event.poster.present? %>
          <div class="eventposter" style="background-image: url('<%= cl_image_path booking.event.poster %>')">
          <!-- <img src="https://www.fillmurray.com/140/200" class="event__thumbnail"> -->
          </div>
        <% end %>
        <div class="event_info">
          <h4 class="event__title"><%= booking.event.name %> - <%= booking.event.movie %></h4>
          <li class="event__details"><%= booking.event.address %></li>
          <li class="event__details"><%= booking.event.date.strftime(" %A %e %B") %> at
            <%= booking.event.date.strftime("%l %p") %></li>
          <li class="event__details">You have bought <strong><%= booking.number_of_tickets %></strong> tickets</li>
          <li class="event__details"><%= booking.event.venue_type %></li>
        </div>
      </div>
    <% end %>
  <% end %>
</ul>
