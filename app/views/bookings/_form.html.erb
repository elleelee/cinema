<div class="form-container booking-container">
  <div class="flex-between">Participants:
    <div class="actions">
      <a class="btn round-bordered incrementer minus" data-offset="-1">-</a>
      <span id="counter" data-count="1">1</span>
      <a href="#" class="btn round-bordered incrementer" data-offset="1">+</a>
    </div>
  </div>

  <%= simple_form_for [@event, @booking] do |f| %>
    <%= f.input :number_of_tickets, as: :hidden, input_html: { value: 1 }  %>
    <%= f.submit "Pay", class: "btn btn-primary w-100", id: "booking-submit" %>
  <% end %>
</div>

